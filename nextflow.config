#!/usr/bin/env nextflow

params.genomes = "./phage_data/*/*.fasta"
params.features = "./phage_data/*/*.gff"
params.proteins = "./phage_data/*/*.faa"
params.outDir = "results"
params.wsl = false

params.colabdb = "."    // path/to/db
params.foldseekdb = "." // "path/to/db/name_of_db" 
params.validdb = "."    // "path/to/db/name_of_db" 


docker {
    enabled = true
}

process {
    // local for now, push to dockerhub for remote

    withName: mmseqscluster {
        container = "colabfold"
    }
    withName: mmseqscluster_refine {
        container = "colabfold"
    }
    // withName: createDB {
    //     container = "colabfold"
    // }
    withName: colabfold_batch {
        container = "colabfold"
    }
    withName: colabfold_batch_wsl {
        container = "colabfold"
    }
    // withName: foldseek {
    //     container = "foldseek"
    // }
    // withName: foldseekValidate {
    //     container = "foldseek"
    // }

    // use this container for the rest
    container = "phagomics"
}